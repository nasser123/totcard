<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="totcardPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>model.Auxcartao</class>
    <class>model.Parcelas</class>
    <class>model.Bandeira</class>
    <class>model.Venda</class>
    <class>model.Administradora</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://10.1.1.1:3306/totcard?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="totaltech"/>
    </properties>
  </persistence-unit>
</persistence>
